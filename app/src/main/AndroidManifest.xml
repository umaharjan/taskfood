<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.myapplication">

    <application
        android:name=".dagger.AppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.homepage.HomePageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.fooddetail.FoodDetailActivity"
            android:configChanges="orientation"
            android:parentActivityName=".activity.fooddetail.FoodDetailActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.fooddetail.FoodDetailActivity" />
        </activity>

        <activity
            android:name=".activity.cartlist.CartListActivity"
            android:configChanges="orientation"
            android:parentActivityName=".activity.cartlist.CartListActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.cartlist.CartListActivity" />
        </activity>

        <activity
            android:name=".activity.checkout.CheckoutActivity"
            android:configChanges="orientation"
            android:parentActivityName=".activity.checkout.CheckoutActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.checkout.CheckoutActivity" />
        </activity>

        <activity
            android:name=".activity.summery.SummaryActivity"
            android:configChanges="orientation"
            android:parentActivityName=".activity.summery.SummaryActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.summery.SummaryActivity" />
        </activity>
    </application>

</manifest>